<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".Novatex_Activity">


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Scan QR Code"
        android:id="@+id/ScanQRbtn"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="18dp"
        android:layout_gravity="center"
        android:background="#3e7bdd"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Show Records"
        android:layout_marginBottom="18dp"
        android:layout_gravity="center"
        android:id="@+id/showRecbtn"
        android:background="#3e7bdd"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Scan Location"
        android:layout_marginBottom="18dp"
        android:id="@+id/Scanlocbtn"
        android:background="#3e7bdd"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Scan dispatch Cartons"
        android:layout_marginBottom="18dp"
        android:id="@+id/Scandcbtn"
        android:background="#3e7bdd"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Hold Carton"
        android:layout_marginBottom="18dp"
        android:id="@+id/Holdbtn"
        android:background="#3e7bdd"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Realised Carton"
        android:layout_marginBottom="18dp"
        android:id="@+id/Realisedbtn"
        android:background="#3e7bdd"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Damage Carton"
        android:layout_marginBottom="18dp"
        android:id="@+id/Damagebtn"
        android:background="#3e7bdd"
        android:textColor="#ffffff"/>



</LinearLayout>
</ScrollView>